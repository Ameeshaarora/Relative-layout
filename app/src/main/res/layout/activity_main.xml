<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/IVb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/baseline_accessibility_new_24"
         />

    <ImageView
        android:id="@+id/five"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/IVb"
        android:src="@drawable/five" />

    <ImageView
        android:id="@+id/Access"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        android:layout_marginleft="20dp"
        android:src="@drawable/call_center"
        />


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/five"
        android:layout_marginHorizontal="10dp"
        android:text="Network"
        android:id="@+id/tvnet"
        android:layout_marginVertical="10dp"
        android:layout_alignParentRight="true"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IVb"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="Stop"
        android:textSize="25dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Access"
        android:layout_marginRight="30dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="5dp"
        android:text="Call"
        android:textSize="30dp"
        android:id="@+id/tvcall"
    />

    <TextView
        android:id="@+id/tvarora"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_below="@id/tvcall"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/tvameesha"
        android:background="#48FA50"
        android:gravity="center"
        android:text="DNS"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/tvameesha"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/stop"
        android:layout_marginTop="50dp"
        android:layout_marginStart="-40dp"
        android:layout_marginEnd="-40dp"
        android:background="#F43A3A"
        android:elevation="40dp" />

    <TextView
        android:id="@+id/tvc"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tvnet"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/tvameesha"
        android:background="#4FFB57"
        android:gravity="center"
        android:text="MARS"
        android:textSize="35sp" />


    <Switch
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/tvarora"
        android:layout_marginTop="30dp"
        android:background="#FF9800"
        android:id="@+id/idSwitch"
        android:text="One way"
        android:textColor="@color/white"
        android:textSize="35sp"
        />


<TextView
    android:layout_width="220dp"
    android:layout_height="80dp"
    android:background="#F69910"
    android:layout_below="@id/idSwitch"
    android:text="1 Traveller"
    android:textColor="@color/white"
    android:gravity="center"
    android:layout_marginStart="10dp"
    android:textSize="35sp"
    android:layout_marginTop="20dp"
    />

</RelativeLayout>